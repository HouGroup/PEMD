; em.mdp - used as input into grompp to generate em.tpr
; Created by PEMD

integrator      = steep
nsteps          = 50000
emtol           = 1000.0
emstep          = 0.01

; Parameters describing how to find the neighbors of each atom and how to calculate the interactions
nstlist         = 1
cutoff-scheme   = Verlet
ns_type         = grid
rlist           = 1.0
coulombtype     = PME
rcoulomb        = 1.0
rvdw            = 1.0
pbc             = xyz
; output control is on
energygrps      = System
